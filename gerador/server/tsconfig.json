{
  "compilerOptions": {
    "target": "ES2020", // Escolha do ES2020 para compatibilidade com features modernas
    "module": "commonjs", // Express usa o sistema de módulos CommonJS
    "outDir": "./dist", // Saída dos arquivos compilados na pasta dist
    "strict": true, // Habilita checagens mais rigorosas do TypeScript
    "esModuleInterop": true, // Para facilitar o uso de imports no estilo ES6
    "skipLibCheck": true, // Ignora verificação de tipos de bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante consistência de nomes de arquivos
    "moduleResolution": "node", // Resolve módulos como no Node.js
    "allowSyntheticDefaultImports": true // Para importar pacotes que não possuem exports padrão corretamente
  },
  "include": [
    "api/**/*.ts" // Inclui todos os arquivos TypeScript dentro da pasta api
  ],
  "exclude": [
    "node_modules", // Exclui a pasta node_modules
    "dist" // Exclui a pasta dist para evitar conflitos
  ]
}
